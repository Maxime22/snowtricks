{{ form_start(form) }}

<div class="row">
	<div class="col-md-12 form-group mb-3">
		<div>
			{{ form_label(form.mail) }}
		</div>
		<div>
			{{ form_errors(form.mail) }}
		</div>
		{{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-md-12 form-group mb-3">
		<div>
			{{ form_label(form.username) }}
		</div>
		<div>
			{{ form_errors(form.username) }}
		</div>
		{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
	</div>
	<h2>Mon avatar</h2>
	<div class="text-center">
		{% if user.photo == "avatar.jpeg" %}
			<img id="user_photo_img" src="{{ (user.photo) ? '/images/users/' ~ user.photo : '' }}">
		{% else %}
			<img id="user_photo_img" src="{{ (user.photo) ? '/images/users/uploads/' ~ user.photo : '' }}">
		{% endif %}
	</div>
	{{ form_row(form.photoFile) }}
</div>
{{ form_widget(form) }}

<div class="text-center">
	<button id="submit_button" class="btn btn-primary">{{"save"|trans}}</button>
</div>

{{ form_end(form) }}