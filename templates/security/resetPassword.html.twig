{% extends 'base.html.twig' %}

{% block title %}
	Changement de mot de passe
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="m-auto text-center">
				<form method="post">
					<h1 class="h3 mb-3">Changement de mot de passe</h1>
					{% for message in app.flashes('danger') %}
						<div class="alert alert-danger">{{ message }}</div>
					{% endfor %}
					{% for message in app.flashes('notice') %}
						<div class="alert alert-primary">{{ message }}</div>
					{% endfor %}
					<div class="form-group">
						<input class="form-control" placeholder="Nouveau mot de passe" name="password" required type="password">
					</div>
					<div class="form-group">
						<input class="form-control" placeholder="VÃ©rification du nouveau mot de passe" name="passwordVerify" required type="password">
					</div>
					<input type="hidden" name="token" value="{{ token }}">
					<button class="btn btn-primary" type="submit">
						Sauvegarder
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
