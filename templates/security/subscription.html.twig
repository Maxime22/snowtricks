{% extends "base.html.twig" %}

{% block title %}
	{{"subscription"|trans}}
{% endblock %}
{% block body %}
	{{ form_start(form) }}
	<div class="container">
		<div class="row">
			<div class="col-4 text-center offset-4">
				<div class="mt-3"><h1>{{"subscription"|trans}}</h1></div>
				{% for message in app.flashes('danger') %}
					<div class="alert alert-danger">{{ message }}</div>
				{% endfor %}
				<div class="row">
					<div class="col-md-12 text-center form-group mt-3">
						<div>
							{{ form_label(form.username) }}
						</div>
						<div>
							{{ form_errors(form.username) }}
						</div>
						{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="col-md-12 text-center form-group mt-3">
						<div>
							{{ form_label(form.mail) }}
						</div>
						<div>
							{{ form_errors(form.mail) }}
						</div>
						{{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="col-md-12 text-center form-group mt-3">
						<div>
							{{ form_errors(form.password) }}
						</div>
						<div>
							{{ form_label(form.password.first) }}
						</div>
						<div>
							{{ form_errors(form.password.first) }}
						</div>
						{{ form_widget(form.password.first) }}
						<div class="mt-3">
							{{ form_label(form.password.second) }}
						</div>
						<div>
							{{ form_errors(form.password.second) }}
						</div>
						{{ form_widget(form.password.second) }}
					</div>
				</div>
				{{ form_widget(form) }}
				<div class="text-center mt-3">
					<button class="btn btn-primary">{{"subscribe"|trans}}</button>
				</div>
			</div>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
