{% extends 'base.html.twig' %}

{% block title %}
	{{"password.forgotten"|trans}}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="m-auto text-center">
			<h1 class="mt-3">Mot de passe oubli√©</h1>
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger">{{ message }}</div>
			{% endfor %}
			{% for message in app.flashes('notice') %}
				<div class="alert alert-primary">{{ message }}</div>
			{% endfor %}

			{{ form_start(form) }}

			<div class="row">
				<div class="col-4 offset-4 form-group mt-3">
					<div>
						{{ form_label(form.mail) }}
					</div>
					<div>
						{{ form_errors(form.mail) }}
					</div>
					{{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			{{ form_widget(form) }}

			<div class="text-center mt-3 mb-3">
				<button id="submit_button" class="btn btn-primary">Envoyer un mail</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
