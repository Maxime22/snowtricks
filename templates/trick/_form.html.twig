{{ form_start(form) }}

<div class="row">
	<div class="col-md-12 form-group">
		<div>
			{{ form_label(form.title) }}
		</div>
		<div class="form_error">
			{{ form_errors(form.title) }}
		</div>
		{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div class="col-md-12 form-group">
		<div>
			{{ form_label(form.trickGroup) }}
		</div>
		<div class="form_error">
			{{ form_errors(form.trickGroup) }}
		</div>
		{{ form_widget(form.trickGroup, {'attr': {'class': 'form-select'}}) }}
	</div>
	<div class="col-md-12 form-group">
		<div>
			{{ form_label(form.content) }}
		</div>
		<div class="form_error">
			{{ form_errors(form.content) }}
		</div>
		{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
	</div>
	<div>
		<img id="trick_mainImg_img" src="{{ (trick.mainImgName) ? '/images/tricks/uploads/' ~ trick.mainImgName : '' }}">
	</div>
	{{ form_row(form.mainImg) }}

	<div>
		<ul
			id="photo_field_list" data-prototype="{{ form_widget(form.images.vars.prototype)|e }}" data-ul-type="Photo" data-array-photos="{{ arrayPhotosForPreview is defined ? arrayPhotosForPreview : '' }}" data-widget-counter="{{ form.images|length }}">
			{{ form_widget(form.images) }}
		</ul>
		<button type="button" class="add-another-collection-widget btn btn-primary" data-list-selector="#photo_field_list">Ajouter une image</button>
	</div>
	<div>
		<ul id="video_field_list" data-prototype="{{ form_widget(form.videos.vars.prototype)|e }}" data-ul-type="Video" data-widget-counter="{{ form.videos|length }}">
			{# Javascript here #}
			{{ form_widget(form.videos) }}
		</ul>
		<button type="button" class="add-another-collection-widget btn btn-primary" data-list-selector="#video_field_list">Ajouter une vid√©o</button>
	</div>
</div>
{{ form_widget(form) }}

<div class="text-center">
	<button id="submit_button" class="btn btn-primary">{{"save"|trans}}</button>
</div>

{{ form_end(form) }}

{% if trick.id %}
	{% if is_granted("trick_delete" , trick) %}
		{{ include('trick/_delete_form.html.twig') }}
	{% endif %}
{% endif %}